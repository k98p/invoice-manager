
<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Products</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
        <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    </head>
    <body>
        <div class="container">
            
            <div class = "add-div">
                <button type="button" data-toggle="modal" data-target="#add-prod-form">+ADD</button>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>

            <!-- The Modal for adding product-->
            <div class="modal fade" id="add-prod-form">
                <div class="modal-dialog">
                    <div class="modal-content">
                    
                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title">Add Products</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        
                        <!-- Modal body -->
                        <div class="modal-body">
                            <form name="add-prod">
                                <div id="name-block">    
                                    <label for="name">Product Name</label>
                                    <input type="text" placeholder="Cecilia Chapman" name="name">
                                </div>
                                <div id="price-block">
                                    <label for="price">Price</label>
                                    <input type="text" placeholder="" name="price">
                                </div>

                                <div class="form-bottom">
                                    <button type="button" onclick="add_prod(this.form)">SUBMIT</button>    
                                </div>
                                <div id = "result_add"></div>
                            </form>
                        </div>                
                    </div>
                </div>
            </div>

            <!-- The Modal for editing product-->
            <div class="modal fade" id="edit-prod-form">
                <div class="modal-dialog">
                    <div class="modal-content">
                    
                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title">Edit Products</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        
                        <!-- Modal body -->
                        <div class="modal-body">
                            <form name="edit-prod">
                                <div id="id-block">    
                                    <label for="id">Product Id</label>
                                    <p type="text" id = "edit_id" name="id"></p>
                                </div>
                                <div id="name-block">    
                                    <label for="name">Product Name</label>
                                    <input type="text" id = "edit_name" name="name">
                                </div>
                                <div id="price-block">
                                    <label for="price">Price</label>
                                    <input type="text" id = "edit_price" name="price">
                                </div>
            

                                <div class="form-bottom">
                                    <input type="button" value="SUBMIT" onclick="edit_prod(this.form)">    
                                </div>
                                <div id = "result_edit"></div>
                            </form>
                        </div>                
                    </div>
                </div>
            </div>
        </div>

        
        <script>
            function fetchall(){
                fetch('http://localhost:3000/api/products/', {
                    method: 'GET',
                    headers: {
                        //"authorization": `jwt ${accesstoken_stored}` 
                    }
                })
                .then(res => res.json())
                .then(data => {
                    //console.log(data);
                    let count = 0;
                    let buffer = ""
                    prod_data = document.getElementsByTagName("tbody")[0];
                    data.forEach((product)=>{
                        count++;
                        buffer +=   `<tr>
                                        <td>${product.name}</td>
                                        <td>${product.price}</td>
                                        <td><i class="fas fa-edit" data-toggle="modal" data-target="#edit-prod-form" onclick="edit_form('${product._id}')"></i></td>
                                    </tr>`
                    })
                    prod_data.innerHTML = buffer;
                })
            }
            
            fetchall();

            function edit_form(id){
                console.log("working" + id)
                fetch('http://localhost:3000/api/products/'+id , {
                    method: 'GET'
                }).then(res=>{
                    return res.json()
                }).then((data)=>{
                    //console.log(data)
                    document.getElementById("edit_id").innerHTML = data[0]._id
                    document.getElementById("edit_name").value = data[0].name
                    document.getElementById("edit_price").value = data[0].price
                })
            }

            function edit_prod(frm){
                const id = document.getElementById("edit_id").innerHTML
                //console.log(id)
                fetch('http://localhost:3000/api/products/' + id ,{
                    method: 'PUT',
                    body: JSON.stringify({
                        "name": frm.name.value,
                        "price": frm.price.value
                    }),
                    headers: {
                        "Content-type": "application/json"
                    }
                }).then(res=>{
                    return res.json()
                })
                .then((data)=>{
                    document.getElementById("result_edit").innerHTML = "<small>Product edited successfully!</small>"
                    setTimeout(()=>{document.getElementById("result_edit").innerHTML = ""}, 3000)
                    fetchall()
                })
            }

            function add_prod(frm){
                fetch('http://localhost:3000/api/products',{
                    method: 'POST',
                    body: JSON.stringify({
                        "name": frm.name.value,
                        "price": frm.price.value
                    }),
                    headers: {
                        "Content-type": "application/json"
                    }
                }).then(res=>{
                    return res.json()
                })
                .then((data)=>{
                    document.getElementById("result_add").innerHTML = "<small>Product added successfully!</small>"
                    setTimeout(()=>{document.getElementById("result_add").innerHTML = ""}, 3000)
                    fetchall()
                })
            }
            
        </script>
    </body>
</html>






