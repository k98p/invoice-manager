<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Customers</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
        <script src="https://kit.fontawesome.com/a076d05399.js"></script>
        <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
        <style>

            html,body {
                font-family: 'Roboto', san-serif;
                font-style: normal;
                font-size: 16px;
                
            }
            .add_button{
                width: 84px;
                height: 50px;
                background: linear-gradient(180deg, #DC2C2C 0%, #FF3B3C 99.99%, rgba(183, 27, 27, 0) 100%);
                border: none;
                color: #FFFFFF;
            }

            .submit_button{
                width: 100px;
                height: 50px;
                background: linear-gradient(180deg, #DC2C2C 0%, #FF3B3C 99.99%, rgba(183, 27, 27, 0) 100%);
                border: none;
                color: #FFFFFF;
            }

            .cust-head{
                background-color: #DC2C2C;
                color: #FFFFFF;
            }

            input{
                padding-left: 10px;
                width: 100%;
                height: 45px;
            }

            textarea{
                width: 100%;
                padding-left: 10px;
                padding-top: 8px;
            }

            label{
                font-weight: bold;
            }

            a{
                font-weight: bold;
            }

            .activated{
                color: #D20606;
            }

            tr:nth-child(even) {background-color: #FFD4D4;}

            thead{
                background-color: #DC2C2C;
                color: #FFFFFF;
            }

            .edit{
                border: none;
                background-color: transparent;
            }

        </style>
    </head>
    <body>
        <div class="container">
            <header>
                <nav class="navbar navbar-expand-lg navbar-light">
                    <a class="navbar-brand" href="#"><img src="static/images/logo.png" height="46px" width="46px" alt="Itobuz"></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <span class="w-100"></span>
                    <div class="collapse navbar-collapse navbarSupportedContent">
                        <ul class="navbar-nav">
                            <li class="nav-item px-2">
                                <a class="nav-link" href="products">Products</a>
                            </li>
                            <li class="nav-item px-2 active">
                                <a class="nav-link " href="customers">Customers</a>
                            </li>
                            <li class="nav-item px-2">
                                <a class="nav-link" href="invoices">Invoices</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
            <hr class="my-0">

            <div class = "add-div py-4 text-right pr-4">
                <button type="button" class="add_button" data-toggle="modal" data-target="#add-cust-form">Add+</button>
            </div>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="pl-4">Customer Name</th>
                        <th style="width: 400px;">Address</th>
                        <th>Phone</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>

            <!-- The Modal for adding customer-->
            <div class="modal fade" id="add-cust-form">
                <div class="modal-dialog">
                    <div class="modal-content">
                    
                        <!-- Modal Header -->
                        <div class="modal-header cust-head">
                            <h6 class="modal-title">Add Customers</h6>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        
                        <!-- Modal body -->
                        <div class="modal-body px-4 py-4">
                            <form name="add-cust">
                                <div id="name-block" class="">
                                    <div class="col-md-12">
                                        <label for="name">Customer Name</label>
                                    </div>    
                                    <div class="col-md-12">
                                        <input type="text" placeholder="Cecilia Chapman" name="name" required>
                                    </div>
                                </div>
                                <div id="address-block" class="pt-3">
                                    <div class="col-md-12">
                                        <label for="address">Address</label>
                                    </div>    
                                    <div class="col-md-12">
                                        <textarea placeholder="711-2880 Nulla St. Mankato Mississippi 96522" class="big_field" name="address" rows="3" required></textarea>
                                    </div>
                                </div>
                                
                                <div id="phone-block" class="pt-3">
                                    <div class="col-md-12">
                                        <label for="phone">Phone</label>
                                    </div>
                                    <div class="col-md-12">
                                        <input type="text" placeholder="(257) 563-7401" name="phone" required>
                                    </div>
                                </div>

                                <div class="form-bottom text-center pt-4">
                                    <button type="button" class="submit_button" onclick="add_cust(this.form)">Submit</button>    
                                </div>

                                <div id = "result_add" class="text-center col-md-12 pt-3"></div>
                            </form>
                        </div>                
                    </div>
                </div>
            </div>

            <!-- The Modal for editing customer-->
            <div class="modal fade" id="edit-cust-form">
                <div class="modal-dialog">
                    <div class="modal-content">
                    
                        <!-- Modal Header -->
                        <div class="modal-header cust-head">
                            <h6 class="modal-title">Edit Customer</h6>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        
                        <!-- Modal body -->
                        <div class="modal-body px-4 py-4">
                            <form name="edit-cust">
                                <div id="id-block" class="row">
                                    <div class="col-md-12">
                                        <label for="id">Customer Id</label>
                                    </div>
                                    <div class="col-md-12">
                                        <p type="text" id = "edit_id" name="id"></p>
                                    </div>
                                    
                                </div>
                                <div id="name-block" class="pt-3">
                                    <div class="col-md-12">
                                        <label for="name">Customer Name</label>
                                    </div>    
                                    
                                    <div class="col-md-12">
                                        <input type="text" id = "edit_name" name="name">
                                    </div>
                                    
                                </div>
                                <div id="address-block" class="pt-3">
                                    <div class="col-md-12">
                                            
                                        <label for="address">Address</label>
                                    </div>
                                    <div class="col-md-12">
                                        <textarea class="big_field" name="address" id = "edit_add" rows="3" required></textarea>
                                    </div>
                                    
                                </div>
                                
                                <div id="phone-block" class="pt-3">
                                    <div class="col-md-12">
                                        <label for="phone">Phone</label>
                                    </div>
                                        
                                    <div class="col-md-12">
                                        <input type="text" id = "edit_phone" name="phone">
                                    </div>
                                    
                                </div>

                                <div class="form-bottom text-center pt-4">
                                    <button type="button" class="submit_button" onclick="edit_cust(this.form)">Submit</button>    
                                </div>
                                <div id = "result_edit" class="text-center col-md-12 pt-3"></div>
                            </form>
                        </div>                
                    </div>
                </div>
            </div>
        </div>

        
    </body>
    <script src="static/scripts/customer.js"></script>
</html>
